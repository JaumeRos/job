<% if flash.any? %>
  <div class="fixed inset-x-0 top-0 z-[1000] px-4 pt-6">
    <div class="w-full max-w-xl mx-auto">
      <% flash.each do |type, message| %>
        <% flash_classes = case type
          when "notice" then "bg-teal-50 border-teal-400 text-teal-800"
          when "alert" then "bg-red-50 border-red-400 text-red-800"
          else "bg-gray-50 border-gray-400 text-gray-800"
          end
        %>
        <div class="<%= flash_classes %> border-l-4 p-4 mb-4 rounded shadow-lg animate-fade-in-down" role="alert">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <% if type == "notice" %>
                <svg class="h-5 w-5 text-teal-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
              <% else %>
                <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                </svg>
              <% end %>
            </div>
            <div class="ml-3 flex-1">
              <p class="text-sm font-medium"><%= message %></p>
            </div>
            <div class="ml-4 flex-shrink-0">
              <button type="button" 
                class="<%= type == 'notice' ? 'text-teal-400 hover:text-teal-500' : 'text-red-400 hover:text-red-500' %> inline-flex rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-teal-50 focus:ring-teal-600"
                onclick="this.closest('[role=alert]').remove()">
                <span class="sr-only">Dismiss</span>
                <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              </button>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %> 