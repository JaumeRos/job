<!-- Recent Jobs Section -->
<div class="bg-gray-50 pt-16 pb-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-3xl tracking-tight font-extrabold text-gray-900 sm:text-4xl">
        Recent Teaching Opportunities
      </h2>
      <p class="mt-3 max-w-2xl mx-auto text-xl text-gray-500 sm:mt-4">
        Browse our latest teaching positions from top educational institutions.
      </p>
    </div>

    <div class="mt-12 max-w-lg mx-auto grid gap-5 lg:grid-cols-3 lg:max-w-none">
      <% Job.published.recent.limit(3).each do |job| %>
        <div class="flex flex-col rounded-lg shadow-lg overflow-hidden">
          <div class="flex-1 bg-white p-6 flex flex-col justify-between">
            <div class="flex-1">
              <p class="text-sm font-medium text-teal-600">
                <%= job.job_type %>
              </p>
              <div class="block mt-2">
                <p class="text-xl font-semibold text-gray-900"><%= job.title %></p>
                <p class="mt-3 text-base text-gray-500"><%= truncate(job.description, length: 150) %></p>
              </div>
            </div>
            <div class="mt-6 flex items-center">
              <div class="flex-shrink-0">
                <span class="sr-only"><%= job.company_name %></span>
                <div class="h-10 w-10 rounded-full bg-teal-100 flex items-center justify-center">
                  <span class="text-teal-600 font-bold text-xl"><%= job.company_name[0].upcase %></span>
                </div>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-gray-900">
                  <%= job.company_name %>
                </p>
                <div class="flex space-x-1 text-sm text-gray-500">
                  <span><%= job.location %></span>
                  <span aria-hidden="true">&middot;</span>
                  <span><%= job.salary_range %></span>
                </div>
              </div>
            </div>
          </div>
          <%= link_to "View Position", job_path(job), class: "block bg-gray-50 text-sm font-medium text-teal-600 text-center px-4 py-4 hover:bg-gray-100" %>
        </div>
      <% end %>
    </div>

    <div class="mt-10 text-center">
      <%= link_to "View All Positions", jobs_path, class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-teal-600 hover:bg-teal-700" %>
    </div>
  </div>
</div>

<!-- CTA Section -->
<div class="bg-teal-700">
  <div class="max-w-2xl mx-auto text-center py-16 px-4 sm:py-20 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-extrabold text-white sm:text-4xl">
      <span class="block">Ready to find your next teaching position?</span>
    </h2>
    <p class="mt-4 text-lg leading-6 text-teal-100">
      Join thousands of educators who have found their perfect teaching job through our platform.
    </p>
    <div class="mt-8 flex justify-center">
      <%= link_to "Get Started Today", new_user_registration_path, class: "inline-flex items-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-teal-600 bg-white hover:bg-teal-50" %>
    </div>
  </div>
</div>
