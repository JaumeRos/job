<%
  meta_title "Browse Teaching Jobs & Education Positions"
  meta_description "Browse the latest teaching and education positions. Find jobs in schools, colleges, and educational institutions worldwide. Apply to teaching positions that match your expertise."
%>

<div class="bg-white">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="lg:text-center mb-12">
      <h1 class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-gray-900 sm:text-4xl">Available Teaching Jobs</h1>
    </div>

    <div class="bg-white shadow overflow-hidden sm:rounded-md">
      <ul role="list" class="divide-y divide-gray-200">
        <% @jobs.each do |job| %>
          <li>
            <%= link_to job_path(job), class: "block hover:bg-gray-50" do %>
              <div class="px-4 py-4 sm:px-6">
                <div class="flex items-center justify-between">
                  <div class="flex items-center">
                    <div class="flex-shrink-0">
                      <div class="h-12 w-12 rounded-full bg-indigo-100 flex items-center justify-center">
                        <svg class="h-6 w-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                        </svg>
                      </div>
                    </div>
                    <div class="ml-4">
                      <h3 class="text-lg font-medium text-teal-600 truncate"><%= job.title %></h3>
                      <p class="mt-1 text-sm text-gray-500">
                        <%= job.company_name %> â€¢ <%= job.location %>
                      </p>
                    </div>
                  </div>
                  <div class="ml-2 flex-shrink-0 flex">
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                      <%= job.job_type %>
                    </span>
                  </div>
                </div>
                <div class="mt-4">
                  <div class="sm:flex sm:justify-between">
                    <div class="sm:flex">
                      <p class="flex items-center text-sm text-gray-500">
                        <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <%= job.salary_range %>
                      </p>
                      <p class="mt-2 flex items-center text-sm text-gray-500 sm:mt-0 sm:ml-6">
                        <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        <%= job.location %>
                      </p>
                    </div>
                    <div class="mt-2 flex items-center text-sm text-gray-500 sm:mt-0">
                      <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                      </svg>
                      Posted <%= time_ago_in_words(job.created_at) %> ago
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>

    <% if @jobs.empty? %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No jobs found</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by creating a new job listing.</p>
        <div class="mt-6">
          <%= link_to new_job_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-teal-600 hover:bg-teal-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500" do %>
            <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            Post a new position
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- New Content Sections -->
    <div class="mt-24 max-w-7xl mx-auto">
      <!-- Why Choose Us Section -->
      <div class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">Why Choose Our Teaching Job Board?</h2>
        <div class="grid md:grid-cols-3 gap-8">
          <div class="bg-white p-6 rounded-lg border border-gray-200">
            <div class="text-teal-600 mb-4">
              <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-2">Verified Schools</h3>
            <p class="text-gray-600">All our listed schools and institutions are thoroughly vetted to ensure quality opportunities.</p>
          </div>
          <div class="bg-white p-6 rounded-lg border border-gray-200">
            <div class="text-teal-600 mb-4">
              <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-2">Career Growth</h3>
            <p class="text-gray-600">Find opportunities that match your career goals and professional development aspirations.</p>
          </div>
          <div class="bg-white p-6 rounded-lg border border-gray-200">
            <div class="text-teal-600 mb-4">
              <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-2">Global Reach</h3>
            <p class="text-gray-600">Access teaching opportunities from prestigious institutions worldwide.</p>
          </div>
        </div>
      </div>

      <!-- Resources Section -->
      <div class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">Teaching Resources</h2>
        <div class="grid md:grid-cols-2 gap-8">
          <div class="bg-gray-50 p-8 rounded-lg">
            <h3 class="text-xl font-semibold mb-4">For Teachers</h3>
            <ul class="space-y-3">
              <li class="flex items-center text-gray-600">
                <svg class="h-5 w-5 mr-2 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
                CV Writing Tips for Educators
              </li>
              <li class="flex items-center text-gray-600">
                <svg class="h-5 w-5 mr-2 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
                Interview Preparation Guide
              </li>
              <li class="flex items-center text-gray-600">
                <svg class="h-5 w-5 mr-2 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
                Professional Development Resources
              </li>
            </ul>
          </div>
          <div class="bg-gray-50 p-8 rounded-lg">
            <h3 class="text-xl font-semibold mb-4">For Schools</h3>
            <ul class="space-y-3">
              <li class="flex items-center text-gray-600">
                <svg class="h-5 w-5 mr-2 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
                How to Write Effective Job Listings
              </li>
              <li class="flex items-center text-gray-600">
                <svg class="h-5 w-5 mr-2 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
                Teacher Recruitment Best Practices
              </li>
              <li class="flex items-center text-gray-600">
                <svg class="h-5 w-5 mr-2 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
                School Profile Enhancement Tips
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Call to Action Section -->
      <div class="bg-teal-600 text-white rounded-lg p-8 text-center mb-16">
        <h2 class="text-3xl font-bold mb-4">Ready to Find Your Next Teaching Opportunity?</h2>
        <p class="text-lg mb-6 text-teal-100">Join thousands of educators who have found their ideal teaching positions through our platform.</p>
        <%= link_to "Browse All Positions", "#", class: "inline-block bg-white text-teal-600 px-8 py-3 rounded-lg font-semibold hover:bg-teal-50 transition-colors" %>
      </div>
    </div>
  </div>
</div>
