<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="md:flex md:items-center md:justify-between md:space-x-5 mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Post a Teaching Position</h1>
      <p class="mt-1 text-sm text-gray-500">Connect with passionate educators by sharing your opportunity.</p>
    </div>
  </div>

  <%= form_with(model: @job, class: "space-y-8 divide-y divide-gray-200") do |f| %>
    <% if @job.errors.any? %>
      <div class="rounded-md bg-red-50 p-4 mb-6">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">There were <%= pluralize(@job.errors.count, "error") %> with your submission</h3>
            <div class="mt-2 text-sm text-red-700">
              <ul class="list-disc pl-5 space-y-1">
                <% @job.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="space-y-8 divide-y divide-gray-200">
      <div class="pt-8">
        <div>
          <h3 class="text-lg font-medium leading-6 text-gray-900">Position Details</h3>
          <p class="mt-1 text-sm text-gray-500">This information will be displayed publicly to help educators find your position.</p>
        </div>

        <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
          <div class="sm:col-span-4">
            <%= f.label :title, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.text_field :title, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md", placeholder: "e.g., High School Math Teacher" %>
            </div>
          </div>

          <div class="sm:col-span-6">
            <%= f.label :job_type, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.select :job_type, 
                  ['Full-time', 'Part-time', 'Contract', 'Substitute', 'Remote'],
                  { prompt: 'Select position type' },
                  class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
            </div>
          </div>

          <div class="sm:col-span-6">
            <%= f.label :description, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.text_area :description, rows: 5, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border border-gray-300 rounded-md", 
                  placeholder: "Describe the position, requirements, and what makes your school special..." %>
            </div>
            <p class="mt-2 text-sm text-gray-500">Write a compelling description that will attract the best educators.</p>
          </div>

          <div class="sm:col-span-4">
            <%= f.label :salary_range, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.text_field :salary_range, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md", placeholder: "e.g., $50,000 - $75,000" %>
            </div>
          </div>

          <div class="sm:col-span-4">
            <%= f.label :location, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.text_field :location, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md", placeholder: "City, State or Remote" %>
            </div>
          </div>
        </div>
      </div>

      <div class="pt-8">
        <div>
          <h3 class="text-lg font-medium leading-6 text-gray-900">School Information</h3>
          <p class="mt-1 text-sm text-gray-500">Help educators learn more about your institution.</p>
        </div>

        <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
          <div class="sm:col-span-4">
            <%= f.label :company_name, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.text_field :company_name, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md", placeholder: "School or District Name" %>
            </div>
          </div>

          <div class="sm:col-span-4">
            <%= f.label :company_website, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.text_field :company_website, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md", placeholder: "https://..." %>
            </div>
          </div>

          <div class="sm:col-span-4">
            <%= f.label :company_email, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.email_field :company_email, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md", placeholder: "contact@school.edu" %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="pt-5">
      <div class="flex justify-end space-x-3">
        <%= link_to 'Cancel', jobs_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <%= f.submit "Preview Listing", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500", data: { turbo: false } %>
      </div>
    </div>
  <% end %>
</div>
